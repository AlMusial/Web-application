extend layout.pug

block content
    #content 
        #myDIV.header
            h2  Your To Do List
            form.form-horizontal(id='task-form', method='post')
                input(type='text', name='myInput', id='myInput', placeholder='Title...')
                button.btn.btn-success(type='submit') send
                br
                br
                ul
                each task in tasks
                    p #{task.name}  done: #{task.done}
                    a(href='http://localhost:3000/profile/edit/' + task.name) edit
        br
        br
        a(class='button' type='button' href='http://localhost:3000/auth/logout') Logout
        br 