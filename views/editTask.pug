extend layout.pug

block content
    #content 
        #myDIV.header
            h2 Edit task: 
            form.form-horizontal(id='edit-form', method='post')
                ul
                each task in tasks
                    p #{task.name}  done: #{task.done}
                input(type='text', name='editInput', id='editInput', placeholder='new name')
                button.btn.btn-success(type='submit') save
                each task in tasks
                    a(href='http://localhost:3000/profile#/edit/' + task.name + '/delete') delete
                br
                br